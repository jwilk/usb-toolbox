: '''
: reset all USB controllers
: '''

set -e -u
for path in /sys/bus/pci/drivers/[ouex]hci[-_]*/*:*
do
    dev=${path##*/}
    drv=${path%/*}
    printf '%s\n' "$dev" > "$drv/unbind"
    printf '%s\n' "$dev" > "$drv/bind"
done

# vim:ts=4 sts=4 sw=4 et
